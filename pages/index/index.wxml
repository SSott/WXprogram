<view class = 'slider'>
<swiper indicator-dots="是否显示面板指示点" autoplay="是否自动切换" interval="5000" duration="2000" circular="{{ true }}">
	<swiper-item>
      	<image src="/assets/images/banner-01.png" width="375" height="150" mode="aspectFill"/>
    </swiper-item>
	<swiper-item>
      	<image src="/assets/images/banner-02.png" width="375" height="150" mode="aspectFill"/>
    </swiper-item>
</swiper>
</view>
<view class='index-nav' >
    <navigator wx:for="{{ navList }}" wx:key="id" class='nav-item' url='/pages/shoplist/shoplist?cat={{item.id}}&title={{item.name}}'>
    <image src='{{ item.icon }}'></image>
    <text class='text-font'>{{ item.name }}</text>
    </navigator>
    
</view>
