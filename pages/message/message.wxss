page{
  background-color: #f1f1f1;
}
.card{
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius:14rpx; 
  margin: 60rpx 20rpx;
  padding: 20rpx 30rpx;
  display:flex;
  flex-direction: column;
}
.card-title{
  margin-bottom: 20rpx;
  font-size: 20px;
}
.card-date{
  font-size: 14px;
  border-bottom: 3rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  color: #ddd;
}
.card-desc{
  font-size: 16px;
  border-bottom: 3rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  margin: 20rpx 0;
}
.card-image{
  width: 100%;
  height: 390rpx;
}
.card-read{
  font-size: 14px;
  color: #666;
  }

